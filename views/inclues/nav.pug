nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
    a(href="test.html").avbar-brand
        img(src="logo.svg", alt="logo image", width="30", height="30").d-inline-block.align-top
        span.h3.align-middle.mx-2(style="font-family:Arial") Renesas

    button.navbar-toggler(type="button",data-toggle="collapse" data-target="#navbarSupportedContent" 
                          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
    .collapse.navbar-collapse(id="navbarSupportedContent")
        ul.navbar-nav.mr-5
            li.nav-item.active
                a.nav-link(href="#") 首頁
                    span.sr-only Current
            li.nav-item
                a.nav-link(href="aboutUs.html") 關於我們
            li.nav-item.dropdown
                a.nav-link.dropdown-toggle(id="navbarDropdownMenuLink" data-toggle="dropdown" href="#" aria-expanded="false" aria-haspopup="true") 聯絡我們
                .dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                    a.dropdown-item(href="#") 聯絡電話
                    a.dropdown-item(href="#") 聯絡信箱
        form.form-inline.mx-auto
            input#search.form-control.mr-sm-4(type="search", aria-label="Search123", placeholder="請輸入查詢商品...")
            button#btnSearch.btn.btn-outline-success.my-2.my-sm-0(type="submit") 查詢
        .regBtn
            button#btnReg.btn.btn-outline-warning.mr-sm-2(type="submit" onclick='move(this)') 註冊
        .loginBtn
            button#btnLogin.btn.btn-outline-primary.my-2.my-sm-0(type="submit" onclick='move(this)') 登入
        script.
            function move(mode) {
                //alert(mode.id);
                if (mode.id == 'btnReg')
                    window.location.href = 'register.html';
                if (mode.id == 'btnLogin')
                    window.location.href = 'login.html';
            };